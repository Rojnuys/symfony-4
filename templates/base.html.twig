<!DOCTYPE html>
<html data-bs-theme="dark">
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    <link rel="icon"
          href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">

    {{ encore_entry_link_tags('app') }}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
          crossorigin="anonymous">

    {% block stylesheets %}
    {% endblock %}

    {{ encore_entry_script_tags('app') }}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
            crossorigin="anonymous"></script>
    {% block importmap %}{{ importmap('app') }}{% endblock %}

    {% block javascripts %}
    {% endblock %}
</head>
<body>
<div class="container main-container">

    <header class="d-flex flex-wrap align-items-center justify-content-center justify-content-md-between py-3 mb-4 border-bottom">
        <div class="col-md-3 mb-2 mb-md-0">
            <a href="{{ path('app_home_index') }}" class="d-inline-flex link-body-emphasis text-decoration-none">
                <img src="{{ asset('/images/logo.svg') }}" alt="Logo" width="150"
                     class="d-inline-block align-text-top">
            </a>
        </div>

        <ul class="nav col-12 col-md-auto mb-2 justify-content-center mb-md-0">
            <li><a href="{{ path('app_shortener_user_statistic') }}" class="nav-link px-2">Statistic</a></li>
        </ul>

        <div class="col-md-3 text-end">
            {% if app.user %}
                <a href="{{ path('app_logout') }}" class="btn btn-outline-primary me-2">Logout</a>
            {% else %}
                <a href="{{ path('app_login') }}" class="btn btn-outline-primary me-2">Login</a>
                <a href="{{ path('app_register') }}" class="btn btn-primary me-2">Sign-up</a>
            {% endif %}
        </div>
    </header>

    <main class="mt-3">
        <div class="row">
            <div class="col-12 col-lg-10">
                <div class="row mb-3">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            {% block breadcrumb_prev %}
                            {% endblock %}
                            {% block breadcrumb_current %}
                            {% endblock %}
                        </ol>
                    </nav>
                </div>
                {% block main %}{% endblock %}
            </div>
            <div class="col-12 col-lg-2 pt-3">
                {{ include('exchange_rates/exchange_rates.html.twig') }}
            </div>
        </div>
    </main>

    <footer class="py-3 my-2">
        <ul class="nav justify-content-center border-bottom pb-3 mb-3">
        </ul>
        <p class="text-center text-body-secondary">© 2024 Rozhnyi Serhii, Inc</p>
    </footer>
</div>
</body>
</html>
